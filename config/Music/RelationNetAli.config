[train]
batch_size = 600
type_of_loss = cross_entropy_loss

optimizer = adam
learning_rate = 2e-4

weight_decay = 1e-3
momentum = 1

gamma = 0.8
step_size = 5

pre_train = 0

epoch = 1024

genre_num_th = 100
singer_num_th = 20

num_interaction = 3

[model]
name = RelationNetwork

hidden_size = 128
emb_size = 50



bert_path = /data/disk1/private/xcj/bert_model/bert-base-chinese
memory_N = 50

[reader] 
need_word2vec = False
word2id = /data/disk1/private/xcj/bert_model/bert-base-chinese/vocab.txt


max_queue_size = 50
train_reader_num = 10
valid_reader_num = 10

[data]
formatter = Alibaba
